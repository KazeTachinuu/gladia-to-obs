{
  "name": "transcription",
  "version": "3.7.0",
  "description": "Live transcription overlay for OBS/VMix with Gladia API",
  "type": "module",
  "scripts": {
    "dev": "bun run src/index.ts",
    "build": "bun run build.ts mac-arm64",
    "build:all": "bun run build.ts all",
    "clean": "rm -rf dist .build",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "release": "bumpp",
    "changelog": "changelogen --output CHANGELOG.md"
  },
  "bumpp": {
    "commit": "release: v%s",
    "tag": true,
    "push": true,
    "execute": "bun run scripts/sync-version.ts"
  },
  "author": "Hugo",
  "license": "MIT",
  "dependencies": {
    "@elysiajs/cors": "^1.4.0",
    "elysia": "^1.4.18",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "bumpp": "^10.3.2",
    "bun-types": "^1.3.4",
    "changelogen": "^0.6.2",
    "typescript": "^5.9.3"
  }
}
