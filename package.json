{
  "name": "transcription",
  "version": "3.7.3",
  "description": "Live transcription overlay for OBS/VMix with Gladia API",
  "type": "module",
  "scripts": {
    "dev": "bun run src/index.ts",
    "build": "bun run build.ts mac-arm64",
    "build:all": "bun run build.ts all",
    "clean": "rm -rf dist .build",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "release": "bun run scripts/release.ts"
  },
  "author": "Hugo",
  "license": "MIT",
  "dependencies": {
    "@elysiajs/cors": "^1.4.0",
    "elysia": "^1.4.18",
    "picocolors": "^1.1.1",
    "semver": "^7.7.3",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@types/semver": "^7.7.1",
    "bun-types": "^1.3.4",
    "typescript": "^5.9.3"
  }
}
